<div class='m-4'>
  <h1 class="font-bold text-4xl my-2">Edit Profile</h1>
  <%= form_for @user do |f| %>
    <table class='border border-black bg-gray-300'>
        <tbody>
            <tr>
                <th class=''>Email</th>
                <td class='p-1'><%= f.text_field(:email, class: 'py-1 px-2') %></td>
            </tr>
            <tr>
                <th class=''>Phone Number</th>
                <td class='p-1'><%= f.text_field(:phone, class: 'py-1 px-2') %></td>
            </tr>
        </tbody>
    </table>

    <button type="submit" class="border border-black bg-gray-300 py-1 px-2 mt-2 rounded-lg">Update Profile</button>
  <% end %>
</div>