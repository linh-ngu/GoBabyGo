<%= form_with(model: part) do |form| %>
  <% if part.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <strong class="font-bold"> <%= pluralize(part.errors.count, "error") %> prohibited this part from being saved:</strong>
      <ul>
        <% part.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <table class="border border-black bg-gray-300" style="border-collapse: collapse;">
    <tr>
      <td class="p-1"><%= form.label :part_name %></td>
      <td class="p-1"><%= form.text_field :part_name, class: "py-1 px-2 bg-white border border-black" %></td>
    </tr>

    <tr>
      <td class="p-1"><%= form.label :part_price %></td>
      <td class="p-1"><%= form.number_field :part_price, step: '0.01', class: "py-1 px-2 bg-white border border-black" %></td>
    </tr>

    <tr>
      <td class="p-1"><%= form.label :purchase_source %></td>
      <td class="p-1"><%= form.text_field :purchase_source, class: "py-1 px-2 bg-white border border-black" %></td>
    </tr>

    <tr>
      <td class="p-1"><%= form.label :quantity_purchased %></td>
      <td class="p-1"><%= form.number_field :quantity_purchased, class: "py-1 px-2 bg-white border border-black" %></td>
    </tr>

    <tr>
      <td colspan="2" class="p-1 text-center"><%= form.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %></td>
    </tr>
  </table>
<% end %>
