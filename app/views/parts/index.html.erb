<p style="color: green"><%= notice %></p>

<h1 class="text-4xl font-bold mb-8">Parts</h1>

<table width="100%">
  <thead>
    <tr>
      <th class="text-left">Part Name</th>
      <th class="text-left">Quantity</th>
      <th class="text-left">Source</th>
      <th class="text-left">Price</th>
      <th class="text-left">Car</th>
      <th colspan="3" class="text-left">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @parts.each do |part| %>
      <tr>
        <td><%= part.part_name %></td>
        <td><%= part.quantity_purchased %></td>
        <td><%= part.purchase_source %></td>
        <td><%= part.part_price %></td>
        <td><%= link_to Car.find(part.car_id).car_type.name, car_path(part.car_id), class: "text-blue-500 hover:underline" %></td>
        <td><%= link_to 'Show', part, class: "text-blue-500 hover:underline" %></td>
        <td><%= link_to 'Edit', edit_part_path(part), class: "text-blue-500 hover:underline" %></td>
        <td><%= link_to 'Destroy', part, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-500 hover:underline" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to "Main Inventory", inventory_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounde" %>
