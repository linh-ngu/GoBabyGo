<!DOCTYPE html>
<html>
  <head>
    <title>GoogleOauthDevise</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'homePage', media: 'all', 'data-turbolinks-track': 'reload' %>
    <style>
        .flash__alert   { color: red; }
        .flash__notice  { color: blue; }
        .flash__success { color: green; }

        /* Optional: for smooth dropdown appearance */
            .dropdown-enter-active, .dropdown-leave-active {
                transition: height 0.5s ease;
            }
            .dropdown-enter, .dropdown-leave-to /* .dropdown-leave-active in <2.1.8 */ {
                height: 0;
                overflow: hidden;
            }
    </style>
    <script>

      function toggleDropdown() {
          var dropdown = document.getElementById("dropdown");
          dropdown.classList.toggle("hidden");
          dropdown.classList.toggle("flex");
          dropdown.classList.toggle("flex-col");
      }

      document.addEventListener('DOMContentLoaded', function() {

        var currentImg = 0;
        var imgs = document.querySelectorAll('.slider img');
        let dots = document.querySelectorAll('.dot');
        var interval = 5000;
      
        var secondImageUrl = "<%= asset_path('2ndHero.jpg') %>";
        var thirdImageUrl = "<%= asset_path('3rdHero.jpg') %>";

        document.getElementById('img-2').src = secondImageUrl;
        document.getElementById('img-3').src = thirdImageUrl;

        var timer = setInterval(changeSlide, interval);
        function changeSlide(n) {
          for (var i = 0; i < imgs.length; i++) {
            imgs[i].style.opacity = 0;
            dots[i].className = dots[i].className.replace(' active', '');
          }

          currentImg = (currentImg + 1) % imgs.length;

          if (n != undefined) {
            clearInterval(timer);
            timer = setInterval(changeSlide, interval);
            currentImg = n;
          }

          imgs[currentImg].style.opacity = 1;
          dots[currentImg].className += ' active';
        }

        function calculateDays(today, eventDate) {
          const difference = eventDate.getTime() - today.getTime();

          return Math.ceil(difference / (1000 * 3600 * 24)); // convert to days
        }
        function logoClickHandler() {
          // Navigate to the root path or any other URL
          window.location.href = "https://www.yourcpf.org/cpproduct/go-baby-go-the-ultimate-toy-hack/";
        }

      });


    </script>
  
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body>
    <div id="page-container">
      <div id="mediaSide1">
      </div>
      <div id="mediaSide2" style="right:0;">
      </div>

      <div id="header" class="" style="">
            <div id="header-box" class="inset-x-0 bottom-0">
          
                    <div id="img-slider">
                      <div class="slider">
                        <img
                          id="img-1"
                          src= <%= asset_path('1stHero.jpg') %>
                          alt="Image 1"
                          style="opacity:1"
                        />
                        <img
                          id="img-2"
                          src = <%= asset_path('2ndHero.jpg') %>
                          alt="Image 2"
                          style="opacity:0"
                        />
                        <img
                          id="img-3"
                          src = <%= asset_path('3rdHero.jpg') %>
                          alt="Image 3"
                          style="opacity:0"
                        />
                      </div>
                    
                      <div class="navigation-button">
                        <span class="dot active" onclick="changeSlide(0)"></span>
                        <span class="dot" onclick="changeSlide(1)"></span>
                        <span class="dot" onclick="changeSlide(2)"></span>
                      </div>
                    </div> 


                <nav id="nav-wrapper" class="mx-auto px-4">
                
                  <img
                    id="img-nav"
                    src= <%= asset_path('gobabygo_logo.png') %>
                    alt="Image 1"
                    style="height:10%; width:10%; cursor:pointer;"
                    onclick = "logoClickHandler()"
                  />
                  
                  <div id="button-wrapper">
                    <div id="nav-buttons" class="md:flex space-x-4 items-center text-xl font-semibold">
                                  <a href="<%= root_path %>" class="py-4 px-2 hover:text-gray-400 transition duration-300 ">Home</a>
                                  <a href="/abouts" class="py-4 px-2 hover:text-gray-400 transition duration-300">About</a>
                                  <a href="/contacts" class="py-4 px-2 hover:text-gray-400 transition duration-300">Contact</a>
                                  <%= link_to 'Help', help_path, class: 'py-4 px-2 hover:text-gray-400 transition duration-300'  %>
                                  <% if admin_signed_in? %>
                                    <%= link_to "Sign Out", destroy_admin_session_path, class:'border border-black bg-white rounded-lg px-2 py-1 m-1' %>
                                  <% else %>
                                    <%= button_to "Sign in", admin_google_oauth2_omniauth_authorize_path, class: "border border-black bg-white rounded-lg px-2 py-1 my-1", style: "" %>
                                  <% end %>

                    </div>
                  </div>
                  
                  <div id="nav-title" class="py-3 flex items-center">
                      <a href="https://www.tamu.edu" target="_blank" rel="noopener noreferrer" class="text-3xl font-bold" style="text-align:center;color:maroon; text-shadow:-1px -1px 0 #FFF, 1px -1px 0 #FFF, -1px 1px 0 #FFF, 1px 1px 0 #FFF; ">Texas A&M<br>University</br></a>
                  </div>                 
                </nav>

                <div id=" ">
                  <h1>Text Here</h1>
                </div>
                
            </div>
      </div> 
      
      <!-- About Section -->
      <div id="about-section" class="" style="display: flex;">
        <img src="path/to/about-image.png" alt="About" style="width: 50%;">
        <p style="margin-left: 20px;">About paragraph goes here. This is a placeholder for the about section's text.</p>
      </div>

      <!-- Process of Applying Section -->
      <div id="process-section" class="" style="text-align: center; padding: 20px;">
        <h2>Process of Applying</h2>
        <button style="background-color: blue; color: white; padding: 10px 20px; font-size: 20px;">Apply Now!</button>
        <div style="display: flex; justify-content: center; padding: 20px;">
          <div style="background-color: blue; color: white; padding: 20px; width: 100px; margin: 0 5px;">Box 1</div>
          <div style="background-color: blue; color: white; padding: 20px; width: 100px; margin: 0 5px;">Box 2</div>
          <div style="background-color: blue; color: white; padding: 20px; width: 100px; margin: 0 5px;">Box 3</div>
          <div style="background-color: blue; color: white; padding: 20px; width: 100px; margin: 0 5px;">Box 4</div>
          <div style="background-color: blue; color: white; padding: 20px; width: 100px; margin: 0 5px;">Box 5</div>
        </div>
      </div>

      <!-- Resources and Contact Section -->
      <div id="resources-contact" class=""  style="position:relative; width:100%;background-color: #f0f0f0; padding: 20px; text-align: center; bottom:0;">
        <h3>Resources and Contact</h3>
        <!-- Add your resources and contact details here -->
      </div>

      
      
    </div>
    





 
 <% if flash.any? %>
      <% flash.each do |key, value| -%>
        <section class="flash flash__<%= key %>"><%= value.html_safe %></section>
      <% end -%>
  <% end %> 

    
    
  </body>
</html>