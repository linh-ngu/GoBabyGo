<div id="<%= dom_id application_note %>">
  <p class="m-4">
    <strong class="block font-bold mb-2">Note:</strong>
    <%= application_note.content %>
  </p>

  <div class='m-2'>
    <% if action_name != "show" %>
      <%= link_to "Show this application note", user_application_application_note_path(@user_application, application_note), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium mx-2" %>
      <%= link_to "Edit this application note", edit_user_application_application_note_path(@user_application, application_note), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium mx-2" %>
      <hr class="m-4">
    <% end %>
  </div>
</div>