<div class='mt-8'><%= link_to("Back to #{@user_application.child_first_name} #{@user_application.child_last_name}'s Application", user_application_path(@user_application), class:'rounded-lg mx-4 py-2 px-3 bg-gray-500 text-white inline-block font-medium cursor-pointer hover:bg-gray-600') %></div>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center m-4">
    <h2 class="text-3xl font-bold">Application Notes</h2>
    <%= link_to "New application note", new_user_application_application_note_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="application_notes" class="max-w-full">
    <%= render partial: 'application_note_table', user: @user, application_notes: @application_notes %>
  </div>
</div>