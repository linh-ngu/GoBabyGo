<p style="color: green"><%= notice %></p>

<div class="flex flex-col justify-center items-center">
<h1 class="text-4xl font-bold p-8">Car Types</h1>
</div>

<div class="overflow-x-auto">
<table class="w-full max-w-7xl mx-auto overflow-hidden bg-white divide-y divide-gray-300 rounded-lg">
  <thead>
    <tr>
      <th class='p-4 text-xl font-bold text-left'>Name</th>
      <th class='p-4 text-xl font-bold text-left'>Price</th>
      <th class='p-4 text-xl font-bold text-left'>Max. Height</th>
      <th class='p-4 text-xl font-bold text-left'>Max. Weight</th>
      <th colspan="3" class='p-4 text-xl font-bold text-left'>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @car_types.each do |car_type| %>
      <tr>
        <td class = "px-3 py-4 break-all"><%= car_type.name %></td>
        <td class = "px-3 py-4 break-all"><%= car_type.price %></td>
        <td class = "px-3 py-4 break-all"><%= car_type.max_height %></td>
        <td class = "px-3 py-4 break-all"><%= car_type.max_weight %></td>
        <td class = "px-3 py-4 break-all"><%= link_to 'Show', car_type, class: "text-blue-500 hover:underline" %></td>
        <td class = "px-3 py-4 break-all"><%= link_to 'Edit', edit_car_type_path(car_type), class: "text-blue-500 hover:underline" %></td>
        <td class = "px-3 py-4 break-all"><%= link_to 'Delete', car_type, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-500 hover:underline" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="flex">
  <%= link_to "Main Inventory", inventory_path, class: 'rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium m-2' %>
  <%= link_to "New Car Type", new_car_type_path, class: 'rounded-lg py-3 px-5 bg-blue-400 inline-block font-medium m-2' %>
</div>