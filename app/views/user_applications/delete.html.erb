<div class='mt-8'><%= link_to('Back to Application', user_applications_path, class:'border border-black bg-white rounded-lg px-2 py-1 m-4') %></div>

<h1 class="font-bold text-4xl m-4 text-center">Delete Application</h1>
<div class="flex flex-col justify-center items-center">
    <%= form_for @user_application, method: 'delete', html: { class: 'flex flex-col items-center' } do |f| %>
    
        <p>Are you sure you want to permanently delete this application for <%= @user_application.child_name %>? </p>

        <button type="submit" class="border border-black bg-white py-1 px-2 m-2 rounded-lg">Delete Application</button>

  <% end %>
</div>