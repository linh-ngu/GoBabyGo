<div class='mt-8'><%= link_to('Back to Applications', user_applications_path, class:'border border-black bg-white rounded-lg px-2 py-1 m-4') %></div>

<div class="flex flex-col justify-center items-center">
    <h1 class='p-4 text-xl font-bold'><%=@user_application.child_name%>'s Application</h1>

    <%= form_for @user_application, html: { class: 'flex flex-col items-center' } do |f| %>
        
        <%= render(partial: 'form', locals: {f: f}) %>

    <% end %>

    <div class="flex justify-between">
        <%= link_to('Edit', edit_user_application_path(@user_application), class: 'border border-black rounded-lg py-1 px-2 m-2') %>
        <%= link_to('Delete', delete_user_application_path(@user_application), class: 'border border-black rounded-lg py-1 px-2 m-2') %>
    </div>
</div>
