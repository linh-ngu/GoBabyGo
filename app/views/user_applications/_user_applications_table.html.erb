<% title_class = "#{table_class}-header bg-#{header_color} text-white text-lg w-full block shadow rounded-md border border-gray-200 outline-none px-3 py-2" %>
<% body_class = "#{table_class}-body bg-white p-2" %>


<div class="<%= body_class %> listing w-full block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2">
  <h3 class="<%= title_class %>"><%= title %></h3>
  <table>
    <% user_applications.each do |user_application| %>
      <tr>
        <td class="py-3">
          <div class="text-lg font-semibold">
          <%= user_application.child_first_name + " " + user_application.child_last_name %>
          <% if user_application.accepted == nil %>
            (Pending)
          <% elsif user_application.accepted == false && user_application.waitlist == false %>
            (Denied)
          <% elsif user_application.waitlist == true %>
            (Waitlist)
          <% elsif user_application.accepted == true %>
            (Accepted)
          <% end %>
          </div>
          <% if title == "Not Accepted" %>
            <%= link_to("View", user_application_path(user_application), class: view_link_class)%>
            <%= link_to("Change Status", edit_user_application_path(user_application), class: status_link_class)%>
            <%= link_to("Delete", delete_user_application_path(user_application), class: delete_link_class)%>
          <% elsif title == "Waitlisted" %>
            <%= link_to("View", user_application_path(user_application),  class: view_link_class)%>
            <%= link_to("Change Status", edit_user_application_path(user_application), class: status_link_class)%>
            <%= link_to("Delete", delete_user_application_path(user_application), class: delete_link_class)%>
          <% elsif title == "Accepted" %>
            <%= link_to("View", user_application_path(user_application),  class: view_link_class)%>
            <%= link_to("Change Status", edit_user_application_path(user_application), class: status_link_class)%>
            <%= link_to("Delete", delete_user_application_path(user_application), class: delete_link_class)%>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>