<% if @user_application.archived? %>
    <div class='mt-8'><%= link_to('Back to Archived Applications', archive_user_applications_path, class:'rounded-lg mx-5 py-2 px-3 bg-gray-500 text-white inline-block font-medium cursor-pointer hover:bg-gray-600') %></div>
<% else %>
    <div class='mt-8'><%= link_to('Back to Applications', user_applications_path, class:'rounded-lg mx-5 py-2 px-3 bg-blue-500 text-white inline-block font-medium cursor-pointer hover:bg-blue-600') %></div>
<% end %>

<div class="flex flex-col justify-center items-center">
    <h1 class='p-4 text-xl font-bold'>Edit <%= @user_application.child_first_name + " " + @user_application.child_last_name %>'s Application</h1>
    <p>Created By: <%= @creator %> </p>

    <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, id: "flash_#{name}" %> <br />
    <% end %>

    <%= form_for @user_application, html: { class: 'flex flex-col items-center' } do |f| %>

        <%= render(partial: 'form', locals: {f: f}) %>

        <button type="submit" class="border border-black py-1 px-2 m-2 rounded-lg">Update Application</button>

    <% end %>
</div>